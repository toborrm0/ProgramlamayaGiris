/*
 * Matrisin boyutunu kullanıcıdan okuyup. Sadece diyagonu (köşegeni) 
 * 1 olan ve diğer elemanları 0 olan bir kare matrisi ekrana bastırın.
 */
#include <iostream>
using namespace std;
int main()
{
	int n;
	cout << "Matris boyutunu giriniz: ";
	cin >> n;
    for(int i=0; i<n; i++){
		for(int j=0; j<n; j++){
			if(i==j)
				cout << "1";
			else
				cout << "0";
		}
		cout << endl;
	}
    return 0;
}
